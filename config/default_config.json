{
  "scraper": {
    "delay": 1.0,
    "max_retries": 3,
    "timeout": 30,
    "headers": {
      "User-Agent": "Mozilla/5.0 (compatible; TopologyNexus/1.0)"
    }
  },
  "semantic": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "embedding_cache": true
  },
  "qlora": {
    "max_memory_mb": 512,
    "compression_ratio": 0.1,
    "cache_hit_threshold": 5,
    "auto_unload": true
  },
  "trainer": {
    "default_architecture": "transformer",
    "learning_rate": 1e-4,
    "batch_size": 16,
    "epochs": 3,
    "weight_decay": 0.01,
    "lora_rank": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.1
  },
  "studio": {
    "data_dir": "data",
    "output_dir": "qlora_modules",
    "auto_save": true,
    "max_datasets": 10
  },
  "gpu": {
    "use_cuda": true,
    "mixed_precision": false,
    "memory_fraction": 0.8
  },
  "databases": {
    "postgres": {
      "host": "localhost",
      "port": 5432,
      "database": "topology",
      "user": "nexus",
      "password": "changeme",
      "max_connections": 10,
      "idle_timeout_ms": 30000,
      "connection_timeout_ms": 2000
    },
    "minio": {
      "endpoint": "localhost:9000",
      "access_key": "minioadmin",
      "secret_key": "minioadmin",
      "secure": false,
      "buckets": {
        "models": "topology-models",
        "datasets": "topology-datasets",
        "logs": "topology-logs",
        "artifacts": "topology-artifacts",
        "checkpoints": "topology-checkpoints"
      }
    },
    "couchdb": {
      "base_url": "http://localhost:5984",
      "username": "admin",
      "password": "changeme",
      "databases": {
        "context": "topology-context",
        "annotations": "topology-annotations",
        "sessions": "topology-sessions",
        "experiments": "topology-experiments"
      }
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "password": null,
      "db": 0,
      "ttl": 3600
    }
  },
  "api": {
    "port": 3000,
    "cors_enabled": true,
    "rate_limit": {
      "window_ms": 900000,
      "max_requests": 100
    },
    "body_limit": "50mb"
  }
}